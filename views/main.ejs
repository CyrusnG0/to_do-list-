<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>To-Do List</h1>
        <form class="subtype">
            <input type="text" name="task" placeholder="Enter a new task for subtype" required>
            <button type="submit">Add</button>
        </form>
    </div>

    <div class="container">
        <form class="maintype">
            <input type="text" name="task" placeholder="Enter a new main type" required>
            <button type="submit">Add</button>
        </form>
    </div>

    <script>
        const sub_form = document.querySelector('form.subtype');
        const main_form = document.querySelector('form.maintype');

        const sub_input = sub_form.querySelector('form.subtype [name="task"]');
        const main_input = main_form.querySelector('form.maintype [name="task"]');

        sub_form.addEventListener('submit', async (e)=>{
            e.preventDefault();
            const task = sub_input.value
    
            try{
                const res = await fetch('/main',{
                method:'POST',
                body: JSON.stringify({type:"sub", input:task}),
                headers:{'Content-Type':'application/json'}
            })
                
            }catch{
                console.log("error")
            }
        })

        main_form.addEventListener('submit', async (e)=>{
            e.preventDefault();
            const type = main_input.value
    
            try{
                const res = await fetch('/main',{
                method:'POST',
                body: JSON.stringify({type:"main", input:type}),
                headers:{'Content-Type':'application/json'}
            })
                
            }catch{
                console.log("error")
            }
        })
    </script>
</body>
</html></form>